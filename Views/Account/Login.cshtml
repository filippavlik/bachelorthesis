@using LoginPart.ViewModels;
@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    .account-container {
        display: flex;
        justify-content: right;
        align-items: center;
        min-height: 100vh;
        padding: 15px;
    }
    
    .account-box {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0);
        padding: 2rem;
        width: 100%;
        max-width: 450px;
    }
    
    @@media (max-width: 576px) {
        .account-box {
            padding: 1.5rem;
            margin: 0 auto;
        }
        
        .btn {
            padding: 0.5rem !important;
        }
        
        h2 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-end mb-2">
                <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none small">
                    Forgot password?
                </a>
            </div>
            
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>
            
            <button type="submit" class="btn btn-success w-100 p-2 mb-3">Login</button>
            
            <div class="text-center mb-3">
                <p class="mb-1">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
                </p>
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        // Add viewport meta tag if not already present
        document.addEventListener('DOMContentLoaded', function() {
            var viewportMeta = document.querySelector('meta[name="viewport"]');
            if (!viewportMeta) {
                viewportMeta = document.createElement('meta');
                viewportMeta.name = 'viewport';
                viewportMeta.content = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no';
                document.getElementsByTagName('head')[0].appendChild(viewportMeta);
            }
        });
    </script>
}
