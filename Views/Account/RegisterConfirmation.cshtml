<!-- RegisterConfirmation.cshtml -->
@{
    ViewData["Title"] = "Ověření e-mailu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-envelope me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="email-animation">
                            <div class="envelope">
                                <div class="paper"></div>
                            </div>
                        </div>
                    </div>
                    <h3 class="mb-3">Potvrďte svůj e-mail</h3>
                    <p class="lead mb-2">
                        Na vaši e-mailovou adresu byl odeslán ověřovací odkaz.
                    </p>
                    <p class="mb-4">
                        Pro dokončení registrace prosím zkontrolujte svou e-mailovou schránku a klikněte na ověřovací odkaz.
                    </p>
                    <div class="alert alert-info" role="alert">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-info-circle fa-2x"></i>
                            </div>
                            <div class="text-start">
                                <p class="mb-1"><strong>Nemůžete najít e-mail?</strong></p>
                                <p class="mb-0">Zkontrolujte složku s nevyžádanou poštou (spam) nebo se ujistěte, že jste zadali správnou e-mailovou adresu.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Zpět na přihlášení
                        </a>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s;
        border-radius: 10px;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .btn {
        transition: all 0.3s;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .btn-primary:hover {
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }

    /* Email animation */
    .email-animation {
        margin: 0 auto;
        width: 120px;
        height: 80px;
        position: relative;
    }

    .envelope {
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: #f1f1f1;
        border-radius: 5px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        overflow: hidden;
        animation: bounce 2s infinite ease-in-out;
    }

        .envelope:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 0;
            border-style: solid;
            border-width: 0 60px 40px 60px;
            border-color: transparent transparent #e6e6e6 transparent;
            transform-origin: top;
            transform: rotateX(180deg);
            z-index: 5;
            transition: all 0.5s ease;
        }

        .envelope:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 0;
            border-style: solid;
            border-width: 40px 60px 0 60px;
            border-color: #e0e0e0 transparent transparent transparent;
        }

    .paper {
        position: absolute;
        top: 5px;
        left: 15px;
        width: 90px;
        height: 60px;
        background-color: white;
        z-index: 1;
        animation: slide 4s infinite ease-in-out;
    }

        .paper:before,
        .paper:after {
            content: '';
            position: absolute;
            top: 10px;
            width: 80%;
            height: 4px;
            background-color: #ddd;
            left: 10%;
            border-radius: 10px;
        }

        .paper:after {
            top: 25px;
            width: 60%;
            left: 20%;
        }
</style>

<script>
    // Add FontAwesome if not already included in your layout
    document.addEventListener('DOMContentLoaded', function() {
        if (!document.querySelector('link[href*="fontawesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
            document.head.appendChild(link);
        }
    });
</script>