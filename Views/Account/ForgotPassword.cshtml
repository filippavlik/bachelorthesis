@model LoginPart.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Zapomenuté heslo";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-lock-open me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <p class="lead">
                            Zadejte svůj e-mail a zašleme vám odkaz pro obnovení hesla.
                        </p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control" placeholder="jmeno@example.cz" autocomplete="email" />
                            <label asp-for="Email">E-mailová adresa</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text text-muted">
                                Zadejte e-mail, který jste použili při registraci.
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Odeslat instrukce
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3">
                    <div class="text-center">
                        <div class="mb-2">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Zpět na přihlášení
                            </a>
                        </div>
                        <div>
                            <span>Nemáte účet?</span>
                            <a asp-action="Register" class="ms-1 text-decoration-none">Registrovat se</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: all 0.3s;
            border-radius: 10px;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #0d6efd;
        }

        .btn-primary {
            transition: all 0.3s;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }
    </style>
}

@section Scripts {
    <script>
        // Add FontAwesome if not already included in your layout
        if (!document.querySelector('link[href*="fontawesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}