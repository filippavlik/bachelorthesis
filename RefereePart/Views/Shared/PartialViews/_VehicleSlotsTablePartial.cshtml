@model List<VehicleSlot>
<table class="table table-striped table-hover">
                <thead class="table-light sticky-header">
                    <tr>
                        <th>Čas přidání</th>
                        <th>Datum a čas od</th>
                        <th>Datum a čas do</th>
                        <th>Má auto k dispozici?</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
			@foreach (var vehicleSlot in Model)
            		{
                		<tr>
                    			<td>@vehicleSlot.DatetimeAdded.ToString("dd-MM-yy HH:mm")</td>
                    			<td>@vehicleSlot.DateFrom.ToString("dd-MM-yy") : @vehicleSlot.TimeFrom.ToString("HH:mm")</td>
                    			<td>@vehicleSlot.DateTo.ToString("dd-MM-yy") : @vehicleSlot.TimeTo.ToString("HH:mm")</td>
                    			<td>
					@if (vehicleSlot.HasCarInTheSlot ?? false)
    					{
        					<i class="fa fa-check text-success"></i> <!-- Green checkmark for true -->
    					} 
    					else
    					{
        					<i class="fa fa-times text-danger"></i>
    					}
					</td>
                    			<td>
                        			<button class="btn btn-sm btn-danger delete-vehicle-slot" data-id="@vehicleSlot.SlotId">
	    <i class="fas fa-trash"></i>
</button>                    			
					</td>
                		</tr>
            		}
                </tbody>
	</table>
