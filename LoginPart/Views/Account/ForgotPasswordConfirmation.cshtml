<!-- ForgotPasswordConfirmation.cshtml -->
@{
    ViewData["Title"] = "Potvrzení zapomenutého hesla";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-envelope me-2"></i>@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="mb-3">Email byl odeslán</h3>
                        <p class="lead">
                            Zkontrolujte prosím svou emailovou schránku. Zaslali jsme vám odkaz pro obnovení hesla.
                        </p>
                    </div>
                    <div class="alert alert-info" role="alert">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-info-circle fa-2x"></i>
                            </div>
                            <div>
                                <p class="mb-0">Pokud email neobdržíte do několika minut, zkontrolujte složku nevyžádané pošty nebo spam.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <a asp-action="Login" class="btn btn-primary">Zpět na přihlášení</a>
                    <a asp-action="ForgotPassword" class="btn btn-outline-secondary ms-2">Zkusit znovu</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: all 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .fas {
            display: inline-block;
        }
    </style>
}

@section Scripts {
    <script>
        // Add FontAwesome if not already included in your layout
        if (!document.querySelector('link[href*="fontawesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
}
