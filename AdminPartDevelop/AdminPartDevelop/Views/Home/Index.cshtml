﻿@using AdminPartDevelop
@using AdminPartDevelop.Models
@using AdminPartDevelop.Views.ViewModels
@model MainViewModel
@{
    ViewData["Title"] = "Administrátorská část";
}
<head>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Only include one version of SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/plugins/rangePlugin.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.15/dist/sweetalert2.min.js"></script>

    <!-- Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.15/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/tippy.js@6/themes/light.css" />

    <script src="~/js/Custom/MainAdminActions.js" defer></script>
</head>
<style>
    .gradient-bar {
        height: 40px;
        width: 100%;
        background: linear-gradient(to right, #8B0000, /* darkred - 0% */
        #FF0000, /* red - 25% */
        #FFA500, /* orange - 50% */
        #9ACD32, /* yellowgreen - 75% */
        #008000 /* green - 100% */
        );
        border-radius: 4px;
        margin-bottom: 5px;
    }

    .scale {
        position: relative;
        height: 30px;
        width: 100%;
    }

    .tick {
        position: absolute;
        width: 2px;
        height: 10px;
        background-color: #333;
        top: 0;
    }

    .tick-label {
        position: absolute;
        transform: translateX(-50%);
        top: 12px;
        font-size: 14px;
    }

    .marker {
        position: absolute;
        width: 10px;
        height: 20px;
        background-color: #333;
        top: -10px;
        transform: translateX(-50%);
        cursor: pointer;
        border-radius: 2px;
    }

    .value-display {
        margin-top: 20px;
        text-align: center;
        font-size: 18px;
        font-weight: bold;
    }

    .labels {
        display: flex;
        justify-content: space-between;
        margin-top: 5px;
    }

    .color-samples {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .color-sample {
        text-align: center;
    }

    .color-box {
        width: 60px;
        height: 40px;
        margin: 0 auto 5px;
        border: 1px solid #ccc;
    }

    .color-value {
        font-size: 12px;
        font-family: monospace;
    }
    .flatpickr-wrapper {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 2px;
        padding: 8px 10px;
        background-color: #f9f9f9;
        margin-bottom: 10px;
    }

    .flatpickr-wrapper {
        padding: 6px 8px;
    }
    .flatpickr-wrapper input {
        flex: 1;
        border: none;
        padding: 8px;
        background: transparent;
        font-size: 14px;
        outline: none;
    }
    .filter-container {
        display: flex;
        align-items: center;
        gap: 10px;
        text-align: right;
        margin-right: 30px;
        padding: 10px;
        border-radius: 5px;
        flex-wrap: wrap;
    }
    .section-with-referees {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 25%;
    background-color: white; /* Optional: ensure readability */
    }

    .container-fluid {
    margin-left:10px;
    display: flex;
    flex-direction: row; /* Aligns items in a row */
    gap: 10px; /* Adds spacing between columns */
    }

    .referee-button-wrapper {
    position: relative;
    display: inline-block;
    margin-right: 12px;
    margin-left: 12px;
    margin-top: 6px;
    margin-bottom: 6px;
    }

    .referee-button {
    font-size: 11px;
    padding: 4px 8px;
    position: relative;
    z-index: 1;
    }

    .rectangle {
    position: absolute;
    width: 7px;
    height: 10px;
    }

    .rect-left-top {
    left: -10px;
    top: 3px;
    }

    .rect-left-bottom {
    left: -10px;
    bottom: 3px;
    }

    .rect-right-top {
    right: -10px;
    top: 3px;
    }

    .rect-right-bottom {
    right: -10px;
    bottom: 3px;
    }

    .referee-button.selected {
    background-color: #007bff; /* Príklad farby pre vybrané tlačidlo */
    color: white;
    }
</style>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div id="customAlert" class="alert alert-warning alert-dismissible fade show d-none" role="alert">
